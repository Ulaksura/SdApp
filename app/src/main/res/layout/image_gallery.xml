<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="20dp"
    android:background="#EDEDED"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageGalleryPicture"
        android:layout_width="match_parent"
        android:layout_height="384dp"
        android:layout_marginBottom="3dp"
        tools:srcCompat="@tools:sample/avatars"/>
    <TextView
        android:id="@+id/seedGalleryDisplay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:text="@string/seedUsed"
        android:textAlignment="center"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textIsSelectable="true" />
    <TextView
        android:id="@+id/promptGalleryDisplay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:text="@string/promptUsed"
        android:textAlignment="center"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textIsSelectable="true" />
    <Button
        android:id="@+id/saveImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/download"
        android:drawableLeft="@drawable/baseline_download_24"
        android:textColor="#ffffff"
        android:padding="8dp"
        android:textSize="18sp"
        android:textAlignment="center" />


</LinearLayout>